<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_ispress_common"
            android:onClick="onClick"
            android:text="添加"
            android:textColor="@color/baise_white" />

        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layerType="software" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_ispress_common"
            android:onClick="onClick"
            android:text="删除"
            android:textColor="@color/baise_white" />

        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layerType="software" />

        <Button
            android:id="@+id/btn_horizontal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_ispress_common"
            android:onClick="onClick"
            android:text="横向"
            android:textColor="@color/baise_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_vertical"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_ispress_common"
            android:onClick="onClick"
            android:text="纵向"
            android:textColor="@color/baise_white" />

        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layerType="software" />

        <Button
            android:id="@+id/btn_listview"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_ispress_common"
            android:onClick="onClick"
            android:text="ListView"
            android:textColor="@color/baise_white" />

        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layerType="software" />

        <Button
            android:id="@+id/btn_gridview"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_ispress_common"
            android:onClick="onClick"
            android:text="网格视图"
            android:textColor="@color/baise_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_flowview"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_ispress_common"
            android:onClick="onClick"
            android:text="瀑布流"
            android:textColor="@color/baise_white" />

        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layerType="software" />

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_ispress_common"
            android:onClick="onClick"
            android:text=""
            android:textColor="@color/baise_white" />

        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layerType="software" />

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_ispress_common"
            android:onClick="onClick"
            android:text=""
            android:textColor="@color/baise_white" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>